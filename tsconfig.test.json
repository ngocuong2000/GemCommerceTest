{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "types": ["vitest", "@testing-library/jest-dom"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["**/*.test.ts", "**/*.spec.ts", "vitest.setup.ts"]
}